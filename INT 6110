    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // ÂÖàÂÆö‰πâÊâÄÊúâÂáΩÊï∞
            function handleAudioPlay() {
                const audio = document.getElementById('bgMusic');
                audio.muted = false;
                audio.play().catch(e => console.log("Êí≠ÊîæÂ§±Ë¥•:", e));
            }

            function updateDots() {
                dots = dots.length >= 3 ? '' : dots + '.';
                statusText.textContent = 'üñãÔ∏è Ê≠£Âú®Á∞ΩÁ¥Ñ‰∏≠' + dots;
            }

            // Ëé∑ÂèñDOMÂÖÉÁ¥†
            const statusText = document.querySelector('.status-text');
            const progressBar = document.querySelector('.progress-bar');
            const progressText = document.querySelector('.progress-text');
            const successMessage = document.getElementById('success-message');
            const failureMessage = document.getElementById('failure-message');
            const audio = document.getElementById('bgMusic');
            
            // ÂàùÂßãÂåñÂèòÈáè
            let dots = '';
            let progress = 0;
            
            // ËÆæÁΩÆÈü≥È¢ëÂàùÂßãÁä∂ÊÄÅ
            audio.volume = 0.5;
            
            // Â∞ùËØïÈùôÈü≥Ëá™Âä®Êí≠Êîæ
            audio.play().catch(e => console.log("ÈùôÈü≥Ëá™Âä®Êí≠ÊîæË¢´ÈòªÊ≠¢:", e));
            
            // Áî®Êà∑ÁÇπÂáªÂêéÂèñÊ∂àÈùôÈü≥
            document.addEventListener('click', handleAudioPlay, { once: true });
            
            // ÂêØÂä®Âä®ÊÄÅÁúÅÁï•Âè∑
            const dotsInterval = setInterval(updateDots, 500);
            updateDots();
            
            // ËøõÂ∫¶Êù°Âä®Áîª
            const progressInterval = setInterval(() => {
                if (progress < 100) {
                    progress += 1;
                    progressBar.style.width = progress + '%';
                    progressText.textContent = progress + '%';
                } else {
                    clearInterval(progressInterval);
                    clearInterval(dotsInterval);
                    statusText.textContent = '';
                    
                    setTimeout(() => {
                        const isSuccess = Math.random() < 1;
                        if (isSuccess) {
                            successMessage.style.opacity = '1';
                        } else {
                            failureMessage.style.opacity = '1';
                        }
                    }, 500);
                }
            }, 50);
        });
    </script>
