    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusText = document.querySelector('.status-text');
            const progressBar = document.querySelector('.progress-bar');
            const progressText = document.querySelector('.progress-text');
            const successMessage = document.getElementById('success-message');
            const failureMessage = document.getElementById('failure-message');
            
            // Âä®ÊÄÅÁúÅÁï•Âè∑
            let dots = '';
            const updateDots = () => {
                dots = dots.length >= 3 ? '' : dots + '.';
                statusText.textContent = 'üñãÔ∏è Ê≠£Âú®Á∞ΩÁ¥Ñ‰∏≠' + dots;
            };
            
            const dotsInterval = setInterval(updateDots, 500);
            updateDots(); // Á´ãÂç≥ÊâßË°å‰∏ÄÊ¨°
            
            // ËøõÂ∫¶Êù°
            let progress = 0;
            const progressInterval = setInterval(() => {
                if (progress < 100) {
                    progress += 1;
                    progressBar.style.width = progress + '%';
                    progressText.textContent = progress + '%';
                } else {
                    clearInterval(progressInterval);
                    clearInterval(dotsInterval);
                    
                    // ÂÆåÊàêÂêéÈöèÊú∫ÊòæÁ§∫ÊàêÂäüÊàñÂ§±Ë¥•
                    statusText.textContent = '';
                    
                    setTimeout(() => {
                        // 70%Ê¶ÇÁéáÊàêÂäüÔºå30%Ê¶ÇÁéáÂ§±Ë¥•
                        const isSuccess = Math.random() < 0.7;
                        
                        if (isSuccess) {
                            successMessage.style.opacity = '1';
                        } else {
                            failureMessage.style.opacity = '1';
                        }
                    }, 500);
                }
            }, 50); // Êï¥‰∏™ËøáÁ®ãÁ∫¶ÈúÄË¶Å5Áßí
        });
    </script>
